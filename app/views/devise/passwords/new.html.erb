<h1 class="text-2xl font-semibold mb-6 text-center">Reset password</h1>

<%= form_with model: resource,
              url: password_path(resource_name),
              local: true do |f| %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium mb-1" %>
    <%= f.email_field :email,
        autofocus: true,
        class: "w-full rounded border px-3 py-2" %>
  </div>

  <%= f.submit "Send reset link",
      class: "w-full rounded bg-blue-600 py-2 text-white font-medium" %>
<% end %>

<p class="mt-6 text-center text-sm">
  <%= link_to "Back to sign in",
      new_user_session_path,
      class: "text-blue-600 hover:underline" %>
</p>
