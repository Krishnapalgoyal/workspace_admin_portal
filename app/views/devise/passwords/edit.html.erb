<h1 class="text-2xl font-semibold mb-6 text-center">Choose new password</h1>

<%= form_with model: resource,
              url: password_path(resource_name),
              method: :put,
              local: true do |f| %>

  <%= f.hidden_field :reset_password_token %>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium mb-1" %>
    <%= f.password_field :password,
        autofocus: true,
        class: "w-full rounded border px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-sm font-medium mb-1" %>
    <%= f.password_field :password_confirmation,
        class: "w-full rounded border px-3 py-2" %>
  </div>

  <%= f.submit "Update password",
      class: "w-full rounded bg-blue-600 py-2 text-white font-medium" %>
<% end %>
