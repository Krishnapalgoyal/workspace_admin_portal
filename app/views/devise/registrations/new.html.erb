<h1 class="text-2xl font-semibold mb-6 text-center">Create account</h1>

<%= form_with model: resource,
              url: registration_path(resource_name),
              local: true do |f| %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium mb-1" %>
    <%= f.email_field :email,
        autofocus: true,
        class: "w-full rounded border px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium mb-1" %>
    <%= f.password_field :password,
        class: "w-full rounded border px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-sm font-medium mb-1" %>
    <%= f.password_field :password_confirmation,
        class: "w-full rounded border px-3 py-2" %>
  </div>

  <%= f.submit "Create account",
      class: "w-full rounded bg-blue-600 py-2 text-white font-medium" %>
<% end %>

<p class="mt-6 text-center text-sm">
  Already have an account?
  <%= link_to "Sign in",
      new_user_session_path,
      class: "text-blue-600 hover:underline" %>
</p>
